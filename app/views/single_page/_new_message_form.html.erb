<h1 class="group-name"></h1>
<h2>New Message</h2>
<form>
  <div class="form-group">
    <input type="text" name="subject" value="" class="form-control" placeholder="subject">
  </div>
  <div class="form-group">
    <textarea type="text" name="message-body" value=""  rows="10" placeholder="message" class="form-control"></textarea>
  </div>

  <input type="button" value="Send Message" name="send-message-action" class="btn btn-primary">
  <input type="button" value="Cancel" name="cancel-message-group" class="btn btn-default">
</form>
